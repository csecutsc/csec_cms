{
  "connection": "default",
  "collectionName": "post",
  "info": {
    "name": "Announcement",
    "description": "Announcement posts"
  },
  "options": {
    "timestamps": [
      "createdAt",
      "updatedAt"
    ]
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "date": {
      "type": "date",
      "required": true
    },
    "files": {
      "collection": "file",
      "via": "related",
      "plugin": "upload"
    },
    "body": {
      "type": "text",
      "required": true
    },
    "active": {
      "required": true,
      "default": true,
      "type": "boolean"
    },
    "cardImage": {
      "model": "file",
      "via": "related",
      "plugin": "upload"
    },
    "codeInputText": {
      "type": "text"
    },
    "user": {
      "model": "user",
      "via": "posts",
      "plugin": "users-permissions"
    },
    "division": {
      "model": "division",
      "via": "announcements"
    }
  }
}